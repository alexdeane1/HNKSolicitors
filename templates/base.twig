{% block head %}
{% endblock %}
</head>
{% endblock %}

<body class="{{body_class}} font-muli" data-template="base.twig">
	<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
	<header class="pt-8 h-[142.5px]">
		{% block header %}
		<div class="w-5/6 mx-auto flex items-center">
			<a class="" href="{{site.url}}" rel="home"><img class="h-20 pr-20" src="{{ site.theme.link }}/resources/img-svg/logo.svg" alt=""></a>
			<nav id="nav-main" class="font-semibold" role="navigation">
				{% include "menu.twig" with {'items': menu.get_items} %}
			</nav><!-- #nav -->
			<div class="ml-auto flex gap-x-[25px] items-center">
				<p class="text-lg font-semibold">Call us now on: <span class="text-[22px] font-bold">0151 668 0810</span></p>
				<button class="w-[172px] h-[51px] bg-primary font-bold text-base text-white">ENQUIRE NOW</button>
			</div>
		</div>
		{% endblock %}
	</header>

	<section id="content" role="main" class="">
		<div class=" {{sidebar_class}}">
			{% block content %}
			Sorry, no content
			{% endblock %}
		</div>
		
	</section>

	{% block footer %}
	<footer id="footer">
		{% include 'footer.twig' %}
	</footer>
	{{ function('wp_footer') }}
	{% endblock %}
	<script src="{{ site.theme.link }}/public/js/app.js"></script>
</body>

</html>